{
    "manifest_version": 3,
    "name": "Job listings filter",
    "version": "1.1",
    "permissions": ["scripting", "storage"],

    "content_scripts": [
        {
            "matches": [
                "https://www.totaljobs.com/jobs/*",
                "https://www.linkedin.com/jobs/*",
                "https://uk.indeed.com/jobs*"
            ],
            "js": ["definitions.js", "parserBase.js"]
        },
        {
            "matches": ["https://www.totaljobs.com/jobs/*"],
            "js": ["parserTotaljobs.js", "employersBlacklistDefaultTotaljobs.js"]
        },
        {
            "matches": ["https://www.linkedin.com/jobs/*"],
            "js": ["parserLinkedin.js", "employersBlacklistDefaultLinkedin.js"]
        },
        {
            "matches": ["https://uk.indeed.com/jobs*"],
            "js": ["parserIndeed.js", "employersBlacklistDefaultIndeed.js"]
        },
        {
            "matches": [
                "https://www.totaljobs.com/jobs/*",
                "https://www.linkedin.com/jobs/*",
                "https://uk.indeed.com/jobs*"
            ],
            "js": ["parserFactory.js", "content.js"]
        }

    ],

    "background": {
        "service_worker": "background.js"
    }
}
